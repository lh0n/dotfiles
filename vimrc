set nocompatible
" Pathogen source: https://github.com/tpope/vim-pathogen.git
execute pathogen#infect()
syntax on
filetype plugin indent on

" Sensible settings set through vim-sensible.
" Sensible source: https://github.com/tpope/vim-sensible.git

set background=dark
" Solarized source: https://github.com/altercation/vim-colors-solarized.git
colorscheme solarized

set cursorline
set colorcolumn=80

set tabstop=2 shiftwidth=2 expandtab
